<%- include('../partials/header') %>

<h1>Posts List</h1>

<div class="posts-list">
  <% for (let post of posts) { %>
    <div>
      <h4><%= post.username %></h4>
      <p><%= post.content %></p>
      <p><strong>Created at:</strong> <%= post.created_at %></p>
      <hr />
    </div>
  <% } %>
</div>

